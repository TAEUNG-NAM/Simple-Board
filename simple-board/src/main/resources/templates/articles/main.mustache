{{>layouts/header}}

<table class="table text-center">
    <thead>
    <tr>
        <th scope="col" class="col">ID</th>
        <th scope="col" class="col-6">TITLE</th>
        <th scope="col" class="col-6">CONTENT</th>
    </tr>
    </thead>
    <tbody>
    {{#articleList}}
        <tr>
            <th>{{id}}</th>
            <td><a href="/articles/{{id}}">{{title}}</a></td>
            <td>{{content}}</td>
        </tr>
    {{/articleList}}
    </tbody>
</table>

<a href="/articles/new"><button class="btn btn-primary px-3 m-2">New</button></a>

{{>layouts/footer}}
