{{>layouts/header}}

<table class="table text-center" id="article-table">
    <thead>
    <tr>
        <th scope="col" class="col">ID</th>
        <th scope="col" class="col-6">TITLE</th>
        <th scope="col" class="col-6">CONTENT</th>
    </tr>
    </thead>
    <tbody>
    {{#article}}
    <tr>
        <input type="hidden" id="article-id" value="{{id}}">
        <th scope="row">{{id}}</th>
        <td>{{title}}</td>
        <td>{{content}}</td>
    </tr>
    <p>{{member.username}}</p>
    {{/article}}

    <input type="hidden" id="">
    </tbody>
</table>

<a href="/articles/{{article.id}}/edit"><button class="btn btn-success ms-2">수정</button></a>
<button type="button" class="btn btn-danger" id="delete-article-btn">삭제</button>
<a href="/articles">목록</a>
<hr>

<!--댓글 목록-->
{{>comments/_comments}}

{{>layouts/footer}}

<!-- 게시글 삭제 API 요청 -->
<script>
{
    // 삭제 버튼 변수화
    const deleteArticleBtn = document.querySelector("#delete-article-btn");

    deleteArticleBtn.addEventListener("click", () => {
        console.log("삭제 버튼 클릭");
        // fetch() - JS을 통해 API 요청 메소드
        articleId = document.querySelector("#article-id").value;    // 게시글 삭제를 위한 ID
        const url = `/api/articles/${articleId}`;
        fetch(url, {
            method: "DELETE",
            headers: {
                "Content-Type" : "application/json"
            }
        }).then(response => {
            if(response.ok){
                window.location.href = "/articles";
                alert("게시글 삭제 완료!");
            }
            else
                alert("게시글 삭제 실패!");
        });
    });
}
</script>